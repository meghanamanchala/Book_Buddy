<div class="container my-5">
  <h2 class="fw-bold text-success">ğŸ‘‹ Welcome, <%= current_user.name %></h2>
  <p class="text-muted mb-4">Here's a quick snapshot of your library.</p>

  <div class="row g-4">
    <div class="col-md-4">
      <div class="card text-white bg-primary shadow-sm">
        <div class="card-body">
          <h5>Total Books</h5>
          <p class="display-6"><%= @books.count %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-white bg-info shadow-sm">
        <div class="card-body">
          <h5>Genres</h5>
          <p class="display-6"><%= @books.map(&:genre).uniq.count %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-white bg-danger shadow-sm">
        <div class="card-body">
          <h5>Deleted</h5>
          <p class="display-6"><%= @deleted_books.count rescue 0 %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to 'ğŸ“š Go to My Books', books_path, class: 'btn btn-success fw-semibold' %>
  </div>
  <div class="mt-5">
  <h4 class="fw-bold text-danger">ğŸ—‘ï¸ Recently Deleted</h4>
  <% recent_deleted = @deleted_books.sort_by(&:deleted_at).reverse.first(3) %>
  <% if recent_deleted.any? %>
    <ul class="list-group">
      <% recent_deleted.each do |book| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= book.title %>
          <%= link_to 'Restore', restore_book_path(book), method: :patch, class: 'btn btn-sm btn-success' %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">No deleted books yet.</p>
  <% end %>
</div>
</div>
