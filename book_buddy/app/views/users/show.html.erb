<div class="container my-5">
  <div class="card shadow-lg p-4 border-0 rounded-4">
    <!-- User Header -->
    <div class="mb-0">
      <h2 class="text-success fw-bold mb-2">👋 Hello, <%= @user.name %>!</h2>
      <p class="text-muted">
        <i class="bi bi-calendar-event me-0"></i>
        Member since <%= @user.created_at.strftime("%B %Y") %>
      </p>
    </div>

    <hr class="my-3"/>

    <!-- Email and Stats -->
    <div class="mb-3">
      <p class="mb-2">
        <i class="bi bi-envelope-fill me-2"></i>
        <strong>Email:</strong> <%= @user.email %>
      </p>

      <% if @user.books.any? %>
        <p class="mb-2">
          <i class="bi bi-journal-bookmark-fill me-2"></i>
          <strong>Books Added:</strong> <%= @user.books.count %>
        </p>
      <% else %>
        <p class="text-muted">
          <i class="bi bi-info-circle me-2"></i>
          You haven't added any books yet.
        </p>
      <% end %>
    </div>

    <hr class="my-3"/>

    <!-- Action Buttons -->
    <div class="d-flex flex-wrap gap-3">
      <%= link_to "✏️ Edit Profile", edit_user_path(@user), class: "btn btn-outline-warning" %>
      <%= link_to "📚 My Library", books_path, class: "btn btn-outline-success" %>
      <%= link_to "🏠 Dashboard", root_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
