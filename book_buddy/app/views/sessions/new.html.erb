<h1>Login</h1>

<%= form_with url: sessions_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email, autofocus: true %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Log in" %>
  </div>
<% end %>

<p>
  Don't have an account? <%= link_to "Sign up", new_user_path %>
</p>

